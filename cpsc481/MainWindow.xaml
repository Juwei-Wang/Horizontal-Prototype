        </Grid>
        <Grid x:Name="grid5" Margin="123,74,-680,-145">
            <Label x:Name="lebel5" Content="Labe5" HorizontalAlignment="Left" Margin="204,146,0,0" VerticalAlignment="Top"/>
        </Grid>


    </Grid>
</Window>
