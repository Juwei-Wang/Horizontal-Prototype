            <Button x:Name="button4" Content="Seeting" Height="40" Background="#FFEE52F5" Click="button4_Click"/>
        </StackPanel>
        <DockPanel LastChildFill="False" Margin="105,0,-680,366" Background="#FFEE52F5">

            <Button x:Name="button7" DockPanel.Dock="Right" Width="100" Background="#FFEE52F5">
                <StackPanel Background="#FFEE52F5">
                    <Image x:Name="image2" Source="/add-recipe.png" Height="40" OpacityMask="#FFEE52F5" />
                </StackPanel>
            </Button>
            <TextBox Text="TextBox" TextWrapping="Wrap" Width="350" Height="41"/>
            <Button x:Name="button8" Content="Search" Width="Auto" Height="41" Background="#FFEE52F5">

            </Button>
        </DockPanel>
        <Grid x:Name="grid2" Margin="123,74,-680,-145">
            <Label x:Name="lebel2" Content="Labe2" HorizontalAlignment="Left" Margin="204,146,0,0" VerticalAlignment="Top"/>
